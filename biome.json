{
  "$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
  "files": {
    "ignoreUnknown": true,
    "ignore": ["proto/", "examples/example-node-manifest/substream/"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "rules": {
      "all": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "nursery": {
        "useImportRestrictions": "off"
      },
      "style": {
        "useNamingConvention": "off"
      },
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}

{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": {
    "ignore": [
      ".direnv",
      "dist",
      "build",
      "out",
      "generated",
      "proto",
      "coverage",
      "pnpm-lock.yaml",
      "tsconfig.json",
      "tsconfig.*.json"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "rules": {
      "all": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "nursery": {
        "useImportRestrictions": "off"
      },
      "style": {
        "useNamingConvention": "off",
        "noNamespaceImport": "off"
      },
      "correctness": {
        "noNodejsModules": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off",
        "noForEach": "off"
      },
      "performance": {
        "noReExportAll": "off",
        "noBarrelFile": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
